{
  "name": "gatsby-multilingual",
  "private": true,
  "license": "MIT",
  "repository": "github:ervasive/gatsby-multilingual",
  "scripts": {
    "ts:compile": "tsc --build",
    "ts:clean": "tsc --build --clean",
    "ts:watch": "tsc --build --watch",
    "jest": "jest",
    "jest:unit": "jest --testPathPattern \"packages/.*/__tests__/*\"",
    "jest:e2e": "jest --testPathPattern \"e2e-tests/.*/__tests__/*\"",
    "jest:watch": "jest --watchAll",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lerna": "lerna"
  },
  "workspaces": [
    "packages/*",
    "e2e-tests/*"
  ],
  "devDependencies": {
    "@types/express": "4.17.2",
    "@types/fs-extra": "8.0.1",
    "@types/glob": "7.1.1",
    "@types/hapi__joi": "^16.0.3",
    "@types/jest": "24.0.23",
    "@types/js-yaml": "3.12.1",
    "@types/lodash": "4.14.149",
    "@types/react-dom": "^16.9.4",
    "@types/shelljs": "0.8.6",
    "@types/url-parse": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "2.8.0",
    "@typescript-eslint/parser": "2.8.0",
    "cypress": "3.6.1",
    "eslint": "6.7.0",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-cypress": "2.7.0",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-react": "7.16.0",
    "fast-check": "1.19.0",
    "gatsby": "^2.18.4",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "jest-junit": "9.0.0",
    "lerna": "3.19.0",
    "lint-staged": "9.4.3",
    "prettier": "1.19.1",
    "true-myth": "^3.1.0",
    "ts-jest": "24.2.0",
    "typescript": "3.7.2",
    "webpack-bundle-analyzer": "3.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
